@model CuaHangBanDoOnline.Models.GioHang

@{
    ViewData["Title"] = "Giỏ Hàng";
}

<!-- Breadcrumb -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                <span class="breadcrumb-item active">Giỏ Hàng</span>
            </nav>
        </div>
    </div>
</div>

<!-- Cart Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Giỏ Hàng</span>
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    @if (Model == null || !Model.ChiTietGioHangs.Any())
    {
        <div class="row px-xl-5">
            <div class="col-12">
                <p class="text-center text-muted">Giỏ hàng của bạn đang trống.</p>
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp Tục Mua Sắm</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row px-xl-5">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Hình Ảnh</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Giá Bán</th>
                                <th>Số Lượng</th>
                                <th>Tổng Cộng</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietGioHangs)
                            {
                                <tr>
                                    <td>
                                        @if (item.HangHoa != null && !string.IsNullOrEmpty(item.HangHoa.Hinh))
                                        {
                                            <img src="@item.HangHoa.Hinh" alt="@item.HangHoa.TenHangHoa" style="width: 100px; height: 100px;" />
                                        }
                                        else
                                        {
                                            <img src="/images/default-product.jpg" alt="Default Image" style="width: 100px; height: 100px;" />
                                        }
                                    </td>
                                    <td>
                                        @if (item.HangHoa != null)
                                        {
                                            <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.HangHoa.MaHangHoa">
                                                @item.HangHoa.TenHangHoa
                                            </a>
                                        }
                                        else
                                        {
                                            <span>Sản phẩm không tồn tại</span>
                                        }
                                    </td>
                                    <td>@item.GiaBan.ToString("N0") VNĐ</td>
                                    <td>
                                        <form asp-action="UpdateCart" method="post" class="d-inline">
                                            <input type="hidden" name="maChiTietGioHang" value="@item.MaChiTietGioHang" />
                                            <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control d-inline" style="width: 80px;" />
                                            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-sync"></i></button>
                                        </form>
                                    </td>
                                    <td>@((item.GiaBan * item.SoLuong).ToString("N0")) VNĐ</td>
                                    <td>
                                        <a asp-action="RemoveFromCart" asp-route-maChiTietGioHang="@item.MaChiTietGioHang" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right mt-4">
                    <h4>Tổng Cộng: <span>@Model.ChiTietGioHangs.Sum(item => item.GiaBan * item.SoLuong).ToString("N0") VNĐ</span></h4>
                    <a asp-action="Checkout" class="btn btn-primary">Thanh Toán</a>
                </div>
            </div>
        </div>
    }
</div>
<!-- Cart End -->