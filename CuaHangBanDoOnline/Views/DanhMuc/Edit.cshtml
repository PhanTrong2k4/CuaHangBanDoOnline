@model CuaHangBanDoOnline.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<h2>Chỉnh sửa danh mục</h2>

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="bg-light p-30">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaDanhMuc" />
                    <div class="form-group">
                        <label asp-for="TenDanhMuc" class="control-label"></label>
                        <input asp-for="TenDanhMuc" class="form-control" />
                        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhanTramGiamGia" class="control-label">Phần trăm giảm giá (%)</label>
                        <input asp-for="PhanTramGiamGia" class="form-control" type="number" step="0.01" min="0" max="100" />
                        <span asp-validation-for="PhanTramGiamGia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}