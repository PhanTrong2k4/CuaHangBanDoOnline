@model IEnumerable<CuaHangBanDoOnline.Models.HoaDon>

<h2>Danh sách hóa đơn</h2>
<a asp-action="Create" class="btn btn-primary">Thêm hóa đơn</a>

<table class="table">
    <thead>
        <tr>
            <th>Mã Hóa Đơn</th>
            <th>Ngày Tạo</th>
            <th>Tổng Tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHoaDon</td>
                <td>@item.NgayTao</td>
                <td>@item.TongTien VNĐ</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaHoaDon" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaHoaDon" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHoaDon" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
