    @section Scripts {
        <script>
            // Kiểm tra trạng thái wishlist khi trang được tải
            function checkWishlistStatus() {
                $('.wishlist-btn').each(function () {
                    var hangHoaId = $(this).data('id');
                    $.ajax({
                        url: '/Wishlist/CheckWishlistStatus',
                        method: 'GET',
                        data: { id: hangHoaId },
                        success: function (response) {
                            if (response.isInWishlist) {
                                $(this).find('i').removeClass('far').addClass('fas');
                            }
                        }
                    });
                });
            }

            function toggleWishlist(hangHoaId, element) {
                var icon = $(element).find('i');
                var isInWishlist = icon.hasClass('fas');

                if (isInWishlist) {
                    // Xóa khỏi wishlist
                    $.ajax({
                        url: '/Wishlist/RemoveFromWishlistByHangHoaId',
                        method: 'POST',
                        data: { hangHoaId: hangHoaId },
                        success: function (response) {
                            if (response.success) {
                                icon.removeClass('fas').addClass('far');
                                updateWishlistCount();
                                toastr.success(response.message);
                            } else {
                                toastr.error(response.message);
                            }
                        },
                        error: function () {
                            toastr.error('Có lỗi xảy ra khi xóa sản phẩm khỏi danh sách yêu thích.');
                        }
                    });
                } else {
                    // Thêm vào wishlist
                    $.ajax({
                        url: '/Wishlist/AddToWishlist',
                        method: 'POST',
                        data: { id: hangHoaId },
                        success: function (response) {
                            if (response.success) {
                                icon.removeClass('far').addClass('fas');
                                updateWishlistCount();
                                toastr.success(response.message);
                            } else {
                                toastr.warning(response.message);
                            }
                        },
                        error: function () {
                            toastr.error('Có lỗi xảy ra khi thêm sản phẩm vào danh sách yêu thích.');
                        }
                    });
                }
            }

            function updateWishlistCount() {
                $.ajax({
                    url: '/Wishlist/GetWishlistCount',
                    method: 'GET',
                    success: function (data) {
                        $('.wishlist-count').text(data.count);
                    },
                    error: function () {
                        console.error('Không thể cập nhật số lượng wishlist.');
                    }
                });
            }

            function updateCartCount() {
                $.ajax({
                    url: '/GioHang/GetCartCount',
                    method: 'GET',
                    success: function (data) {
                        $('.cart-count').text(data.count);
                    },
                    error: function () {
                        console.error('Không thể cập nhật số lượng giỏ hàng.');
                    }
                });
            }

            $(document).ready(function () {
                updateWishlistCount();
                updateCartCount();
                checkWishlistStatus(); // Kiểm tra trạng thái wishlist khi tải trang
            });
        </script>
    }
