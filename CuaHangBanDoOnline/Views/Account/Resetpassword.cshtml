@model CuaHangBanDoOnline.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sử dụng layout chung
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4">
                <h3 class="text-center mb-4">Đặt lại mật khẩu</h3>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success text-center">@ViewBag.Message</div>
                }
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div class="form-group">
                        <label for="Password">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="Password" asp-for="Password" required placeholder="Nhập mật khẩu mới" />
                    </div>
                    <div class="form-group mt-3">
                        <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" required placeholder="Xác nhận mật khẩu" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-4">Đặt lại mật khẩu</button>
                </form>
            </div>
        </div>
    </div>
</div>