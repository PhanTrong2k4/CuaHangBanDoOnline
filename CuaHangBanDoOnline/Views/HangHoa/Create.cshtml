@model CuaHangBanDoOnline.Models.HangHoa

<h2>Thêm hàng hóa</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Tên Hàng Hóa</label>
        <input asp-for="TenHangHoa" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Giá</label>
        <input asp-for="GiaBan" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Mô Tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="SoLuongTon" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Hình ảnh</label>
        <input type="file" name="HinhAnh" class="form-control" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
