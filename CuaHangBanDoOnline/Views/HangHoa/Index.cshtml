@model IEnumerable<CuaHangBanDoOnline.Models.HangHoa>

<h2>Danh Sách Sản Phẩm</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Giá Gốc</th>
            <th>Giá Bán</th>
            <th>Phần Trăm Giảm Giá</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hangHoa in Model)
        {
            <tr>
                <td>@hangHoa.TenHangHoa</td>
                <td>@hangHoa.GiaGoc.ToString("#,##0") VNĐ</td>
                <td>@hangHoa.GiaBan.ToString("#,##0") VNĐ</td>
                <td>
                    @if (ViewData[$"PhanTramGiamGia_{hangHoa.MaHangHoa}"] != null && (decimal)ViewData[$"PhanTramGiamGia_{hangHoa.MaHangHoa}"] > 0)
                    {
                        <span class="badge bg-danger"> -@((decimal)ViewData[$"PhanTramGiamGia_{hangHoa.MaHangHoa}"])%</span>
                    }
                    else
                    {
                        <span>Không có giảm giá</span>
                    }
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@hangHoa.MaHangHoa" class="btn btn-info btn-sm">Chi Tiết</a>
                    <a asp-action="Edit" asp-route-id="@hangHoa.MaHangHoa" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@hangHoa.MaHangHoa" class="btn btn-danger btn-sm">Xóa</a>
                    <a asp-action="ThemGiamGia" asp-route-id="@hangHoa.MaHangHoa" class="btn btn-primary btn-sm">Thêm Giảm Giá</a>
                    <form asp-action="XoaGiamGia" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@hangHoa.MaHangHoa" />
                        <button type="submit" class="btn btn-danger btn-sm">Xóa Giảm Giá</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Thêm Sản Phẩm</a>