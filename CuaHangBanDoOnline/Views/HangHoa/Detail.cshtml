@model CuaHangBanDoOnline.Models.HangHoa

<div class="product-container">
    <h2 class="product-title">@Model.TenHangHoa</h2>
    <div class="product-content">
        <!-- Product Image -->
        <div class="product-image">
            <img src="@Url.Content(Model.Hinh ?? "/images/default-product.jpg")" alt="@Model.TenHangHoa" />
        </div>

        <!-- Product Info -->
        <div class="product-info">
            <div class="stock-status">
                <strong>Tình trạng:</strong>
                <span class="@(Model.SoLuongTon > 0 ? "in-stock" : "out-of-stock")">
                    @(Model.SoLuongTon > 0 ? "Còn hàng" : "Hết hàng")
                </span>
            </div>

            <div class="price-container">
                @if (ViewData[$"PhanTramGiamGia_{Model.MaHangHoa}"] != null && (decimal)ViewData[$"PhanTramGiamGia_{Model.MaHangHoa}"] > 0)
                {
                    <span class="price-original">@Model.GiaGoc.ToString("N0") đ</span>
                    <span class="price-discounted">@Model.GiaBan.ToString("N0") đ</span>
                    <span class="discount-badge"> -@((decimal)ViewData[$"PhanTramGiamGia_{Model.MaHangHoa}"])%</span>
                }
                else
                {
                    <span class="price-discounted">@Model.GiaBan.ToString("N0") đ</span>
                }
            </div>

            <p class="description"><strong>Mô tả:</strong> @Model.MoTa</p>

            <!-- Quantity and Buttons -->
            <div class="action-container">
                <div class="quantity-input">
                    <label for="soLuong">Số lượng:</label>
                    <input type="number" id="soLuong" name="soLuong" value="1" min="1" max="@Model.SoLuongTon" />
                </div>
                <div class="button-container">
                    <div class="top-buttons">
                        <!-- Nút Thêm vào giỏ -->
                        <form asp-controller="GioHang" asp-action="AddToCart" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@Model.MaHangHoa" />
                            <input type="hidden" name="soLuong" id="soLuongThemGio" value="1" />
                            <input type="hidden" name="redirectToCheckout" value="false" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-add-to-cart" onclick="document.getElementById('soLuongThemGio').value = document.getElementById('soLuong').value;">Thêm vào giỏ</button>
                        </form>

                        <!-- Nút Thêm vào wishlist -->
                        <button onclick="addToWishlist(@Model.MaHangHoa)" class="btn btn-wishlist">Thêm vào wishlist</button>
                    </div>

                    <!-- Nút Mua ngay -->
                    <form asp-controller="GioHang" asp-action="AddToCart" method="post" class="buy-now-form">
                        <input type="hidden" name="id" value="@Model.MaHangHoa" />
                        <input type="hidden" name="soLuong" id="soLuongMuaNgay" value="1" />
                        <input type="hidden" name="redirectToCheckout" value="true" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-buy-now" onclick="document.getElementById('soLuongMuaNgay').value = document.getElementById('soLuong').value;">Mua ngay</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Details -->
    <div class="product-details">
        <h3>Chi tiết sản phẩm</h3>
        <p><strong>Lưu ý:</strong></p>
        <ul>
            <li>Key chính hãng, đảm bảo chất lượng cao.</li>
        </ul>
        <p><strong>Quy trình nhận hàng:</strong></p>
        <ol>
            <li>Đặt hàng trực tiếp trên website hoặc liên hệ qua hotline.</li>
            <li>Thanh toán khi xác nhận đơn hàng.</li>
            <li>Nhận key sản phẩm thông qua email.</li>
        </ol>
        <p class="highlight-text">
            Sản phẩm mang đến trải nghiệm tuyệt vời với thiết kế hiện đại, chất lượng vượt trội.
            Được sản xuất bởi thương hiệu uy tín, đảm bảo độ bền và hiệu suất tối ưu.
        </p>
    </div>
</div>

<style>
    /* General Container */
    .product-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 25px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .product-container:hover {
            transform: translateY(-5px);
        }

    .product-title {
        font-size: 2rem;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
        font-weight: 700;
    }

    /* Product Content Layout */
    .product-content {
        display: flex;
        gap: 30px;
        align-items: flex-start;
    }

    /* Product Image */
    .product-image {
        flex: 1;
        text-align: center;
    }

        .product-image img {
            max-width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .product-image:hover img {
            transform: scale(1.05);
        }

    /* Product Info */
    .product-info {
        flex: 1;
        padding: 10px 0;
    }

    .stock-status {
        margin-bottom: 15px;
    }

        .stock-status strong {
            color: #333;
        }

    .in-stock {
        color: #28a745;
        font-weight: bold;
    }

    .out-of-stock {
        color: #dc3545;
        font-weight: bold;
    }

    .price-container {
        margin-bottom: 20px;
    }

    .price-original {
        font-size: 1.1rem;
        color: #999;
        text-decoration: line-through;
        margin-right: 10px;
    }

    .price-discounted {
        font-size: 1.5rem;
        color: #dc3545;
        font-weight: 700;
    }

    .discount-badge {
        background: #dc3545;
        color: #fff;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.9rem;
        margin-left: 10px;
    }

    .description {
        color: #555;
        line-height: 1.6;
        margin-bottom: 20px;
    }

        .description strong {
            color: #333;
        }

    /* Action Container */
    .action-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .quantity-input {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .quantity-input label {
            font-weight: 600;
            color: #333;
        }

        .quantity-input input {
            width: 70px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            text-align: center;
        }

    .button-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .top-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .btn {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
    }

    .btn-add-to-cart {
        background: #28a745;
        flex: 1;
    }

        .btn-add-to-cart:hover {
            background: #218838;
            transform: translateY(-2px);
        }

    .btn-wishlist {
        background: #6c757d;
        flex: 1;
    }

        .btn-wishlist:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    .btn-buy-now {
        background: #dc3545;
        width: 100%; /* Chiếm toàn bộ chiều rộng của container */
    }

        .btn-buy-now:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

    .buy-now-form {
        width: 100%;
    }

    /* Product Details */
    .product-details {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

        .product-details h3 {
            font-size: 1.6rem;
            color: #333;
            margin-bottom: 15px;
        }

        .product-details p {
            color: #555;
            line-height: 1.6;
            margin: 10px 0;
        }

        .product-details strong {
            color: #333;
        }

        .product-details ul, .product-details ol {
            padding-left: 25px;
            margin-bottom: 15px;
        }

        .product-details li {
            color: #555;
            margin-bottom: 8px;
        }

    .highlight-text {
        color: #dc3545;
        font-weight: 600;
    }
</style>

<script>
    function addToCart(hangHoaId) {
        const soLuong = document.getElementById('soLuong').value;
        $.ajax({
            url: '/GioHang/AddToCart',
            method: 'POST',
            data: { id: hangHoaId, soLuong: parseInt(soLuong) },
            success: function (response) {
                updateCartCount();
                alert('Đã thêm sản phẩm vào giỏ hàng.');
            },
            error: function () {
                alert('Có lỗi xảy ra khi thêm vào giỏ hàng.');
            }
        });
    }

    function addToWishlist(hangHoaId) {
        $.ajax({
            url: '/Wishlist/AddToWishlist',
            method: 'POST',
            data: { id: hangHoaId },
            success: function (response) {
                updateWishlistCount();
                alert('Đã thêm sản phẩm vào danh sách yêu thích.');
            },
            error: function () {
                alert('Có lỗi xảy ra khi thêm vào danh sách yêu thích.');
            }
        });
    }
</script>