@model CuaHangBanDoOnline.Models.HangHoa

<h2>Chi tiết hàng hóa</h2>
<table class="table">
    <tr><th>Mã Hàng Hóa</th><td>@Model.MaHangHoa</td></tr>
    <tr><th>Tên Hàng Hóa</th><td>@Model.TenHangHoa</td></tr>
    <tr><th>Giá</th><td>@Model.GiaBan.ToString("N0") VNĐ</td></tr>
    <tr><th>Mô Tả</th><td>@Model.MoTa</td></tr>
</table>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
<a asp-action="Edit" asp-route-id="@Model.MaHangHoa" class="btn btn-warning">Sửa</a>
