@model List<CuaHangBanDoOnline.Models.Slide>

@{
    ViewData["Title"] = "Quản lý Slide";
}

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Quản lý Slide</span>
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm Slide Mới</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hình ảnh</th>
                <th>Tiêu đề</th>
                <th>Liên kết</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slide in Model)
            {
                <tr>
                    <td>@slide.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(slide.Image))
                        {
                            <img src="@slide.Image" alt="@slide.Title" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>Không có hình ảnh</span>
                        }
                    </td>
                    <td>@slide.Title</td>
                    <td>@slide.Link</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@slide.Id" class="btn btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@slide.Id" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>