@model CuaHangBanDoOnline.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thông Tin Tài Khoản";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4 text-primary">Thông Tin Tài Khoản</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- Ảnh Đại Diện -->
        <div class="text-center mb-4">
            <div style="width: 150px; height: 150px; margin: 0 auto; background-color: #f0f0f0; position: relative;">
                <img src="@(Model.UserProfile?.AvatarPath ?? "/images/default-avatar.png")" alt="Avatar"
                     class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;"
                     onerror="this.src='/images/default-avatar.png'" />
            </div>
        </div>

        <!-- Thông tin tĩnh -->
        <div class="list-group mb-3">
            <div class="list-group-item">
                <strong>Tên Đăng Nhập:</strong> @Model.TenDangNhap
            </div>
            <div class="list-group-item">
                <strong>Mật Khẩu:</strong> ********
            </div>
            <div class="list-group-item">
                <strong>Email:</strong> @Model.Email
            </div>
            <div class="list-group-item">
                <strong>Họ Tên:</strong> @(Model.UserProfile?.FullName ?? "Chưa cập nhật")
            </div>
            <div class="list-group-item">
                <strong>Số Điện Thoại:</strong> @(Model.UserProfile?.SoDienThoai ?? "Chưa cập nhật")
            </div>
            <div class="list-group-item">
                <strong>Vai Trò:</strong> @(Model.VaiTro?.TenVaiTro ?? "Không xác định")
            </div>
        </div>

        <!-- Nút Quay lại -->
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Quay lại</a>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        min-height: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>