@model CuaHangBanDoOnline.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa tài khoản";
}

<div class="card p-4">
    <h2 class="text-center mb-4">Xóa tài khoản</h2>

    <div class="alert alert-warning text-center" role="alert">
        Bạn có chắc muốn xóa tài khoản <strong>"@Model.TenDangNhap"</strong> không? Hành động này không thể hoàn tác.
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="MaNguoiDung" />
        <button type="submit" class="btn btn-danger me-2">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>