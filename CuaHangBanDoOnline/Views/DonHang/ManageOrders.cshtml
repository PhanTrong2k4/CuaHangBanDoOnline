@model IEnumerable<CuaHangBanDoOnline.Models.DonHang>

<div class="container my-4">
    <h1>Quản lý đơn hàng</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="ManageOrders" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchMaDonHang" class="form-control" placeholder="Tìm kiếm mã đơn hàng" value="@ViewBag.SearchMaDonHang" />
            <button type="submit" class="btn btn-primary">Tìm</button>
        </div>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Tên Đơn Hàng</th>
                <th>Số Lượng</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donHang in Model)
            {
                var tenHangHoa = donHang.ChiTietDonHangs.FirstOrDefault()?.HangHoa.TenHangHoa ?? "Không xác định";
                var soLuong = donHang.ChiTietDonHangs.Sum(ctdh => ctdh.SoLuong);
                <tr>
                    <td>@donHang.MaDonHang</td>
                    <td>@tenHangHoa</td>
                    <td>@soLuong</td>
                    <td>@donHang.TongTien.ToString("#,##0") VNĐ</td>
                    <td>@donHang.TrangThai</td>
                    <td>
                        @if (donHang.TrangThai == "ChoDuyet")
                        {
                            <form asp-action="DuyetDonHang" asp-route-id="@donHang.MaDonHang" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-primary">Duyệt</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>