@model CuaHangBanDoOnline.Models.DonHang

<h2>Chỉnh sửa đơn hàng</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaDonHang" />
    <div class="form-group">
        <label>Tên Khách Hàng</label>
        <input asp-for="NguoiDung" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ngày Đặt</label>
        <input asp-for="NgayDatHang" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Trạng Thái</label>
        <input asp-for="TrangThai" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
